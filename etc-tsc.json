{
    "compilerOptions": {
		"outDir":                  "./dst",
        "target":                  "esnext",
        "module":                  "nodenext",
        "moduleResolution":        "node",
        "useDefineForClassFields": true,
        "composite":               false,
        "strict":                  true,
        "resolveJsonModule":       false,
        "isolatedModules":         true,
        "esModuleInterop":         true,
        "lib":                     [ "ESNext" ],
        "skipLibCheck":            true,
        "noEmit":                  false,
        "types":                   [ "node" ],
        "rootDir":                 "."
    },
	"include": [
		"yycs-*.ts"
    ]
}
